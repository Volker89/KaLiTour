<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#234A5A"
    tools:context="kaliapps.kalitour.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bg_titel"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:text=""
        android:id="@+id/button"
        android:background="@drawable/icons_start"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:text=""
        android:id="@+id/button4"
        android:background="@drawable/icons_hilfe"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:text=""
        android:id="@+id/button8"
        android:background="@drawable/icons_einstellungen"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

</RelativeLayout>
